{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "dns_record_array": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string"
          }
        },
        "required": ["value"]
      }
    },
    "dns_record_array_with_algorithm": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string"
          }
        },
        "required": ["value"]
      }
    },
    "txt_spf_record_array": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "v": {
            "type": "string"
          },
          "rules": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ip4": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ip6": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "include": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "all": {
            "type": "string"
          }
        },
        "required": ["v", "rules"],
        "additionalProperties": false
      }
    },
    "txt_dmarc_record_array": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "v": {
            "type": "string"
          }
        },
        "required": ["v"],
        "additionalProperties": true
      }
    },
    "ip_record_array": {
      "type": "array",
      "items": { "$ref": "#/definitions/ip_record_with_geoip" }
    },
    "ip_record_with_geoip": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        },
        "geoip": {
          "type": "object",
          "properties": {
            "country": {
              "type": "string"
            },
            "org": {
              "type": "string"
            },
            "asn": {
              "type": "integer"
            }
          },
          "required": ["asn", "country", "org"]
        }
      },
      "required": ["geoip", "value"]
    },
    "value_null_error": {
      "type": "object",
      "properties": {
        "value": {
          "type": ["null", "string"]
        },
        "error": {
          "type": "string"
        }
      },
      "required": ["value"]
    },
    "webserver_info_80": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ip": { "$ref": "#/definitions/webserver_ip" },
          "status": { "$ref": "#/definitions/http_status" },
          "headers": { "$ref": "#/definitions/http_headers" },
          "content": {
            "type": "string"
          },
          "error": {
            "type": "string"
          }
        },
        "required": ["ip"]
      }
    },
    "webserver_info_443": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ip": { "$ref": "#/definitions/webserver_ip" },
          "tls": { "$ref": "#/definitions/tls_info" },
          "status": { "$ref": "#/definitions/http_status" },
          "headers": { "$ref": "#/definitions/http_headers" },
          "content": {
            "type": "string"
          },
          "error": {
            "type": "string"
          }
        },
        "required": ["tls", "ip"]
      }
    },
    "http_headers": {
      "description": "Headers received from the webserver.",
      "type": "object",
      "properties": {
        "location": {
          "type": "string"
        },
        "server": {
          "type": "string"
        },
        "content-security-policy": {
          "type": "string"
        },
        "strict-transport-security": {
          "type": "string"
        },
        "x-powered-by": {
          "type": "string"
        },
        "x-xss-protection": {
          "type": "string"
        },
        "x-content-type-options": {
          "type": "string"
        },
        "x-frame-options": {
          "type": "string"
        },
        "access-control-allow-origin": {
          "type": "string"
        }
      }
    },
    "tls_info": {
      "type": "object",
      "properties": {
        "alpn_protocol": {
          "description": "Protocol negotiated via ALPN.",
          "type": "string"
        },
        "tls_version": {
          "description": "TLS version used for connection.",
          "type": "string"
        },
        "tls_cipher_name": {
          "description": "TLS cipher used for connection.",
          "type": "string"
        },
        "tls_cipher_bits": {
          "description": "TLS cipher's nominal strength",
          "type": "integer"
        },
        "cert": { "$ref": "#/definitions/certificate" }
      }
    },
    "certificate": {
      "type": "object",
      "properties": {
        "subject": {
          "description": "Certificate subject.",
          "$ref": "#/definitions/certificate_name"
        },
        "issuer": {
          "description": "Certificate issuer.",
          "$ref": "#/definitions/certificate_name"
        },
        "version": {
          "description": "Certificate version.",
          "type": "integer",
          "minimum": 1,
          "maximum": 3
        },
        "not_before": {
          "description": "Beginning of certificate validity period.",
          "$ref": "#/definitions/datetime"
        },
        "not_after": {
          "description": "End of certificate validity period.",
          "$ref": "#/definitions/datetime"
        },
        "alt_names": {
          "description": "Alternative names/domains contained in the certificate.",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "serial": {
          "description": "Certificate's serial number (hexadecimal, without colons)",
          "type": "string",
          "pattern": "[0-9a-f]+"
        },
        "algorithm": {
          "description": "Certificate algorithm.",
          "type": "string",
          "enum": [
            "sha1",
            "sha512-224",
            "sha512-256",
            "sha224",
            "sha256",
            "sha384",
            "sha512",
            "sha3-224",
            "sha3-256",
            "sha3-384",
            "sha3-512",
            "shake128",
            "shake256",
            "md5",
            "blake2b",
            "blake2s"
          ]
        },
        "error": {
          "description": "Error message from SSL (python socket).",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "certificate_name": {
      "type": "object",
      "properties": {
        "C": {
          "type": "string"
        },
        "O": {
          "type": "string"
        },
        "CN": {
          "type": "string"
        },
        "OU": {
          "type": "string"
        },
        "L": {
          "type": "string"
        },
        "S": {
          "type": "string"
        }
      },
      "required": ["CN"]
    },
    "http_status": {
      "description": "Status code received from the webserver.",
      "type": "integer"
    },
    "webserver_ip": {
      "description": "Webserver's IP. GeoIP info can be found in DNS_LOCAL.WEB_*.",
      "type": "string"
    },
    "datetime": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}$"
    }
  },
  "type": "object",
  "properties": {
    "domain": {
      "type": "string",
      "description": "Domain name that was crawled."
    },
    "timestamp": {
      "description": "Date and time when the crawling was finished (UTC).",
      "$ref": "#/definitions/datetime"
    },
    "results": {
      "type": "object",
      "description": "A wrapper object holding all the results.",
      "properties": {
        "DNS_LOCAL": {
          "type": "object",
          "description": "DNS records returned from domain's local DNS servers. Array of records, or null when there are none.",
          "properties": {
            "NS_AUTH": {
              "description": "Array of domain's authoritative DNS servers (or null when there are none).",
              "oneOf": [
                {
                  "type": "null"
                },
                { "$ref": "#/definitions/dns_record_array" }
              ]
            },
            "MAIL": {
              "description": "MX record(s) â€“ mail servers with priorities.",
              "anyOf": [
                {
                  "type": "null"
                },
                { "$ref": "#/definitions/dns_record_array" }
              ]
            },
            "WEB4": {
              "description": "IP(s) from domain's A record(s) with GeoIP info, or a domain from CNAME.",
              "anyOf": [
                {
                  "type": "null"
                },
                {
                  "properties": {
                    "value": {
                      "type": "string"
                    }
                  }
                },
                { "$ref": "#/definitions/ip_record_array" }
              ]
            },
            "WEB4_www": {
              "description": "IP(s) from www. subdomain's A record(s) with GeoIP info, or a domain from CNAME.",
              "anyOf": [
                { "$ref": "#/definitions/ip_record_array" },
                {
                  "properties": {
                    "value": {
                      "type": "string"
                    }
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "WEB6": {
              "description": "IP(s) from domain's AAAA record(s) with GeoIP info, or a domain from CNAME.",
              "anyOf": [
                {
                  "type": "null"
                },
                {
                  "properties": {
                    "value": {
                      "type": "string"
                    }
                  }
                },
                { "$ref": "#/definitions/ip_record_array" }
              ]
            },
            "WEB6_www": {
              "description": "IP(s) from www. subdomain's AAAA record(s) with GeoIP info, or a domain from CNAME.",
              "anyOf": [
                {
                  "type": "null"
                },
                {
                  "properties": {
                    "value": {
                      "type": "string"
                    }
                  }
                },
                { "$ref": "#/definitions/ip_record_array" }
              ]
            },
            "WEB_TLSA": {
              "description": "TLSA record for '_443._tcp.domain'.",
              "anyOf": [
                {
                  "type": "null"
                },
                { "$ref": "#/definitions/dns_record_array" }
              ]
            },
            "WEB_TLSA_www": {
              "description": "TLSA record for '_443._tcp.www.domain'.",
              "anyOf": [
                {
                  "type": "null"
                },
                { "$ref": "#/definitions/dns_record_array" }
              ]
            },
            "MAIL_TLSA": {
              "description": "TLSA record for '_25._tcp.domain'.",
              "anyOf": [
                {
                  "type": "null"
                },
                { "$ref": "#/definitions/dns_record_array" }
              ]
            },
            "TXT": {
              "description": "TXT records",
              "anyOf": [
                {
                  "type": "null"
                },
                { "$ref": "#/definitions/dns_record_array" }
              ]
            },
            "TXT_SPF": {
              "description": "SPF record parsed from TXT",
              "anyOf": [
                {
                  "type": "null"
                },
                { "$ref": "#/definitions/txt_spf_record_array" }
              ]
            },
            "TXT_DMARC": {
              "description": "DMARC record parsed from TXT",
              "anyOf": [
                {
                  "type": "null"
                },
                { "$ref": "#/definitions/txt_dmarc_record_array" }
              ]
            },
            "DS": {
              "description": "Domain's DS record with algorithm annotation.",
              "anyOf": [
                {
                  "type": "null"
                },
                { "$ref": "#/definitions/dns_record_array_with_algorithm" }
              ]
            },
            "DNSKEY": {
              "description": "Domain's DNSKEY record with algorithm annotation.",
              "anyOf": [
                {
                  "type": "null"
                },
                { "$ref": "#/definitions/dns_record_array_with_algorithm" }
              ]
            },
            "DNSSEC": {
              "type": "object",
              "description": "DNSSEC validation.",
              "properties": {
                "valid": {
                  "description": "Validation result. Null (= no DNSSEC) or Boolean (valid/invalid).",
                  "type": ["boolean", "null"]
                },
                "rrsig": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "message": {
                  "description": "Message from dnspython's validation mechanism. Eg. 'expired'.",
                  "type": "string"
                },
                "error": {
                  "description": "Error caught during validation. Eg. 'timeout'.",
                  "type": "string"
                }
              },
              "required": ["valid"]
            }
          },
          "required": [
            "DNSKEY",
            "DNSSEC",
            "DS",
            "MAIL",
            "MAIL_TLSA",
            "TXT",
            "TXT_SPF",
            "TXT_DMARC",
            "NS_AUTH",
            "WEB4",
            "WEB4_www",
            "WEB6",
            "WEB6_www",
            "WEB_TLSA",
            "WEB_TLSA_www"
          ],
          "additionalProperties": false
        },
        "DNS_AUTH": {
          "description": "Authoritative DNS servers, with GeoIP info and (hostname|version).bind (if available).",
          "anyOf": [
            {
              "type": "null"
            },
            {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "ns": {
                    "type": "string"
                  },
                  "ns_ipv4": {
                    "anyOf": [
                      {
                        "type": "null"
                      },
                      { "$ref": "#/definitions/ip_record_with_geoip" }
                    ]
                  },
                  "ns_ipv6": {
                    "anyOf": [
                      {
                        "type": "null"
                      },
                      { "$ref": "#/definitions/ip_record_with_geoip" }
                    ]
                  },
                  "HOSTNAMEBIND4": {
                    "anyOf": [
                      {
                        "type": "null"
                      },
                      { "$ref": "#/definitions/value_null_error" }
                    ]
                  },
                  "HOSTNAMEBIND6": {
                    "anyOf": [
                      {
                        "type": "null"
                      },
                      { "$ref": "#/definitions/value_null_error" }
                    ]
                  },
                  "VERSIONBIND4": {
                    "anyOf": [
                      {
                        "type": "null"
                      },
                      { "$ref": "#/definitions/value_null_error" }
                    ]
                  },
                  "VERSIONBIND6": {
                    "anyOf": [
                      {
                        "type": "null"
                      },
                      { "$ref": "#/definitions/value_null_error" }
                    ]
                  }
                },
                "required": [
                  "HOSTNAMEBIND4",
                  "HOSTNAMEBIND6",
                  "VERSIONBIND4",
                  "VERSIONBIND6",
                  "ns",
                  "ns_ipv4",
                  "ns_ipv6"
                ],
                "additionalProperties": false
              }
            }
          ]
        },
        "WEB": {
          "description": "Info about webservers from domain's A/AAAA records.",
          "type": "object",
          "properties": {
            "WEB4_80": {
              "$ref": "#/definitions/webserver_info_80"
            },
            "WEB4_80_www": {
              "$ref": "#/definitions/webserver_info_80"
            },
            "WEB4_443": {
              "$ref": "#/definitions/webserver_info_443"
            },
            "WEB4_443_www": {
              "$ref": "#/definitions/webserver_info_443"
            },
            "WEB6_80": {
              "$ref": "#/definitions/webserver_info_80"
            },
            "WEB6_80_www": {
              "$ref": "#/definitions/webserver_info_80"
            },
            "WEB6_443": {
              "$ref": "#/definitions/webserver_info_443"
            },
            "WEB6_443_www": {
              "$ref": "#/definitions/webserver_info_443"
            }
          },
          "required": [
            "WEB4_443",
            "WEB4_443_www",
            "WEB4_80",
            "WEB4_80_www",
            "WEB6_443",
            "WEB6_443_www",
            "WEB6_80",
            "WEB6_80_www"
          ],
          "additionalProperties": false
        }
      },
      "required": ["DNS_AUTH", "DNS_LOCAL", "WEB"],
      "additionalProperties": false
    }
  },
  "required": ["domain", "results", "timestamp"],
  "additionalProperties": false
}
